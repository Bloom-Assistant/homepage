---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Prices from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Technical Consulting',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      id="technical-consulting-header"
      actions={[
        {
          variant: 'secondary',
          text: 'Schedule a free consultation',
          href: '/schedule-a-demo',
        },
      ]}
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Technical Consulting"
    actions={[
      { variant: 'primary', id:'technical-consulting-hero', target: '_black', text: 'Let us show you a better way', href: '#services' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/3889891/pexels-photo-3889891.jpeg?auto=compress&cs=tinysrgb&w=1200',
      alt: 'Oasis Hero Image',
    }}
  >
    <Fragment slot="title">
        Let us show you how your business can thrive with third-party tools
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Even in 2024, many business owners are still missing the mark when it comes to leveraging third-party tools to help their business grow.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="services"
    title="What we can provide"
    subtitle="We've been around the block and have become skilled in over 400 different technical solutions to various problems"
    columns={2}
    items={[
      {
        title: 'SMS Marketing',
        description:
          'We can help you set up a SMS marketing campaign that will help you reach your customers where they are.',
        icon: 'tabler:message',
      },
      {
        title: 'CDPs',
        description: `We can help you set up a customer data platform that will help you better understand your customers.`,
        icon: 'tabler:database',
      },
      {
        title: 'Chatbots',
        description:
          'We can help you set up a chatbot that will help you automate your customer service and sales processes.',
        icon: 'tabler:robot',
      },
      {
        title: 'Automation',
        description: `We can help you make your business more efficient by automating repetitive tasks.`,
        icon: 'tabler:settings',
      },
    ]}
  />
