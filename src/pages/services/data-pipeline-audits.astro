---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Prices from '~/components/widgets/Pricing.astro';
import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Community Led Open Source Collective',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      id="data-pipeline-header"
      actions={[
        {
          variant: 'secondary',
          text: 'Schedule a free consultation',
          href: 'https://calendly.com/getoasis',
        },
      ]}
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Data Analysis and Engineering"
    actions={[
      { variant: 'primary', id:'data-pipeline-hero', target: '_black', text: 'Learn More', href: '#services' },
    ]}
    image={{
      src: 'https://www.ziprecruiter.com/svc/fotomat/public-ziprecruiter/cms/498337716GasPipeline.jpg=ws1280x960',
      alt: 'Data Pipeline Hero Image',
    }}
  >
    <Fragment slot="title">
      Pipeline problems? <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">We can help</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Let us help you build a data flow that will help you make better decisions, while we work to reduce net suffering.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="services"
    title="What we can do for you"
    subtitle="We can help you churn up the data you need to make better decisions"
    columns={2}
    items={[
      {
        title: 'CDP Implementation',
        description:
          'We can help you implement a customer data platform that will help you understand your customers better.',
        icon: 'tabler:database-export',
      },
      {
        title: 'Enrichment Pipeline',
        description: `We can help you enrich your data with a variety of third-party data sources. We support Clearbit, FullContact, and more.`,
        icon: 'tabler:crystal-ball',
      },
      {
        title: 'CRM Support',
        description:
          'We can help you get your CRM in perfect shape. We support a variety of CRMs, including HubSpot, Salesforce, and more.',
        icon: 'tabler:compass',
      },
      {
        title: 'Data Warehousing',
        description: `We can help you set up a custom data warehouse that will help you store and analyze your data.`,
        icon: 'tabler:packages',
      },
    ]}
  />

  <Prices
    prices={[
      {
        title: 'CDP Implementation',
        subtitle: 'Just the CDP',
        price: ["$8500"],
        period: 'Flat Rate | Installment Plan Available',
        items: [
          {
            description: 'Choose from a variety of CDPs',
          },
          {
            description: 'Dedicated client portal',
          },
          {
            description: 'Experience with over 400 integrations',
          },
          {
            description: 'Strategy and implementation support',
          },
        ],
        callToAction: {
          id: 'cdp-cta',
          text: 'Schedule a call',
          href: 'https://calendly.com/getoasis',
        },
      },
      {
        title: 'CDP + Enrichment Pipeline',
        subtitle: 'Get your data flowing and enriched',
        price: ["$12,300"],
        period: 'Flat Rate | Installment Plan Available',
        items: [
          {
            description: 'Everything in the CDP package', 
          },
          {
            description: 'We fill your CRM with enriched data',
          },
          {
            description: ' We support Clearbit, FullContact, and more',
          },
          {
            description: 'Reveal those diamonds in the rough',
          },
        ],
        callToAction: {
          id: 'enrichment-cta',
          text: 'Schedule a call',
          href: 'https://calendly.com/getoasis',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Full Cycle Engineering',
        subtitle: 'We do custom work too!',
        price: ["Contact Us"],
        period: 'Custom Pricing | Installment Plan Available',
        items: [
          {
            description: 'White glove service', 
          },
          {
            description: 'We set up a custom data warehouse for you',
          },
          {
            description: 'You get ongoing support and maintenance',
          },
          {
            description: 'You get a dedicated account manager',
          },
        ],
        callToAction: {
          id: 'full-cycle-cta',
          text: 'Schedule a call',
          href: 'https://calendly.com/getoasis',
        },
      },
    ]}
  />
