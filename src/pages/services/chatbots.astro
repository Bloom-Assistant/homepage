const metadata = {
  title: 'Chatbot Implementation Support | Oasis',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Chatbot Implementation Support"
    actions={[{ variant:"primary", target: '_blank', text: 'Start the journey', icon: 'tabler:arrow-right', href: '/schedule-a-demo' }]}
    image={{
      src: 'https://rockcontent.com/wp-content/uploads/2021/11/types-of-chatbots.png.webp',
      alt: 'Sand Jeep image',
    }}
  >
    <Fragment slot="title">
      Solve your customer experience problems with an integrated chatbot
    </Fragment>

    <Fragment slot="subtitle">
      Differentiation is the key to success in the modern landscape, and you need the ability to identify and act on opportunities faster than your competition.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->



  <!-- Features3 Widget ************** -->

  <Features
    title="How chatbots can drive ROI"
    subtitle="Identifying and segmenting inbound leads is crucial to driving revenue. We can help you implement a solution that can do just that."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Customer Support',
        description:
          'The modern customer expects a seamless experience across all touchpoints. Chatbots can help route customers to the right place faster.',
        icon: 'tabler:mood-smile',
      },
      {
        title: 'Lead Generation',
        description:
          'Chatbots can help you identify and segment inbound leads, allowing you to act on opportunities faster.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Sales Enablement',
        description:
          'Chatbots can help your sales team identify and act on opportunities faster than the competition.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Education',
        description:
          'Chatbots can educate your customers on your products and services, driving more sales.',
        icon: 'tabler:book',
      },
      {
        title: 'Customer Feedback',
        description:
          'Chatbots can help you gather feedback from your customers, allowing you to act on opportunities faster.',
        icon: 'tabler:message',
      },
      {
        title: 'Customer Retention',
        description:
          'Chatbots can help you retain customers by providing a seamless experience across all touchpoints.',
        icon: 'tabler:heart',
      },
    ]}
  />


