---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Schedule a free consultation',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Learn more about our services"
    title="Schedule a free consultation"
    subtitle="We are here to help you with your data and general technical implementations. Schedule a free consultation with us and we will help you to get started."
    actions={[
      { variant: 'primary', text: 'Get pricing', href: 'https://wa.me/18657763192', icon: 'tabler:brand-whatsapp' },
      { text: 'Schedule Consultation', href: '#demo' },
    ]}
  />
    <!-- Calendly inline widget begin -->
  <div id="demo" class="calendly-inline-widget" data-url="https://calendly.com/getoasis/30min" style="min-width:420px;height:800px;"></div>
  <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
  <!-- Calendly inline widget end -->
  

  <CallToAction
    title="Connect with us"
    subtitle="We are always available to answer any questions you may have. Contact us and we will get back to you as soon as possible."
    actions={[
      {
        variant: 'primary',
        text: 'Chat with us',
        href: 'https://wa.me/18657763192',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  />
</Layout>
