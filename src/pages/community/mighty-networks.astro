---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Public Mighty Networks Chat',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      id="mighty-networks-header"
      actions={[
        {
          variant: 'secondary',
          text: 'Create a free account',
          href: 'https://joinoasis.mn.co/share/uy9GF2G6bUT1mPd8?utm_source=manual',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Public Mighty Networks Chat"
    actions={[
      { variant: 'primary', id:'mighty-networks-here', target: '_blank', text: 'Join the movement', href: 'https://joinoasis.mn.co/share/uy9GF2G6bUT1mPd8?utm_source=manual' },
    ]}
    image={{
      src: 'https://a.fsdn.com/con/app/proj/mighty-networks.s/screenshots/mc-paired-discovery-topics.png/max/max/1',
      alt: 'Oasis Hero Image',
    }}
  >
    <Fragment slot="title">
      Join an active and engaged hub for direct action collaboration
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Get together to collaborate and chat about your projects in private or with the whole community
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Public Mighty Networks Chat"
    subtitle="Plan your next advocacy event in our centralized space for human rights and general advocacy collaboration work"
    columns={2}
    items={[
      {
        title: 'Breaking news updates',
        description:
          'Get updates about breaking news from our 24/7 RSS feed that is linked to 5 major news stations such as Al-Jazeera, CNN, and the Middle East Eye',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resource sharing spaces',
        description: `Share resources with other advocates in a central location and vice versa to create a stream of mutual collaboration`,
        icon: 'tabler:layers-intersect',
      },
      {
        title: 'Chat securely',
        description:
          'Get access to encrypted chats in case you have sensitive projects that are being worked on which need the uptmost privacy',
        icon: 'tabler:lock',
      },
      {
        title: 'Build a network of support',
        description: `Meet and collaborate with advocacy professionals from all over the globe so you have a support system no matter where your project takes you`,
        icon: 'tabler:podium',
      },
    ]}
  />

