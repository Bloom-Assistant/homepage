<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      id="journalism-signup-header"
      actions={[
        {
          variant: 'secondary',
          text: 'Join the movement',
          href: 'https://joinoasis.mn.co/share/uy9GF2G6bUT1mPd8?utm_source=manual',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Stories for people who give a ðŸ’©"
