---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Ephemeral Co-selling Channels',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Join the waitlist',
          href: 'https://forms.fillout.com/t/bHn1ZhE6oLus',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Ephemeral Co-selling"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Join the waitlist', href: 'https://forms.fillout.com/t/bHn1ZhE6oLus' },
    ]}
    image={{
      src: '~/assets/images/roads.png',
      alt: 'Oasis Hero Image',
    }}
  >
    <Fragment slot="title">
      Open <span class="text-primary dark:text-white highlight"
        >temporary</span
      > guest channels to co-sell across channels<br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Give your partners a place to invite warm leads to discuss opportunities with your team in real-time while keeping your data safe and secure.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="What is an ephermal channel?"
    subtitle="When co-selling together, the common approach is to simply rely on hectic email threads with leads who are already managing a million other priorities. With co-selling channels, you can give warm leads a place to discuss your opportunity in real-time while keeping their confidential data secure and locked-down."
    columns={2}
    items={[
      {
        title: 'Stop relying on email',
        description:
          'Email is a great tool, but it was never designed for collaboration. Collaborate with leads in real-time, and keep your data secure.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Rope in all stakeholders',
        description: `With a traditional PRM, you're limited to just your partners. With a collaboration hub, you can invite all stakeholders to the conversation.`,
        icon: 'tabler:layers-intersect',
      },
      {
        title: 'Keep your data secure',
        description:
          'Work through the buying process with your leads, and keep their data secure with our built-in security features.',
        icon: 'tabler:lock',
      },
      {
        title: 'Build trust with your partners',
        description: `Give your partners a place to invite warm leads to discuss opportunities with your team in real-time and in sync.`,
        icon: 'tabler:podium',
      },
    ]}
  />

