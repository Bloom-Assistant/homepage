  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Apply to join the collective',
        id: 'home-hero',
        href: 'https://forms.fillout.com/t/mZ2kbN1bejus',
        target: '_blank',
