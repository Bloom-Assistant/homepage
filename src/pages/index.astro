  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get a free consultation',
        href: 'https://calendly.com/jbohrman/30min',
        target: '_blank',
        icon: 'tabler:calendar-event',
      },
      { text: 'Learn more', href: '#sauce' },
    ]}
