    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#FFEDF4] dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get your dream partner program off the ground with a fractional PSM team."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Schedule a consultation</span>',
