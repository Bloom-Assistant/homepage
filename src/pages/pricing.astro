---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Our Transparent Pricing - Oasis',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widg    et ******************* -->

  <HeroText
    tagline="Let us be your guide"
    title="Transparent and flexible options for every business stage"
    subtitle="Or choose an individual package to suit your needs. We offer a range of options to help you improve your processes and grow your business."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    prices={[
      {
        title: 'Automations',
        subtitle: 'Volume-based automation',
        price: ["$105"],
        period: 'Per Month | Per Process',
        items: [
          {
            description: 'Volume-based pricing',
          },
          {
            description: 'Zapier, n8n, or Make',
          },
          {
            description: '1 Education Session',
          },
          {
            description: 'Concierge Support',
          },
        ],
        callToAction: {
          id: 'process-automations',
          text: 'Order now',
          icon: 'tabler:shopping-cart',
          href: 'https://buy.stripe.com/fZedU1gdQbs26Pe8wB',
        },
      },
      {
        title: 'Chatbots',
        subtitle: 'Managed chatbot support',
        price: ["$1200"],
        period: 'Flat Rate | Per Chatbot',
        items: [
          {
            description: 'Basic chatbot setup',
          },
          {
            description: 'Intercom, Drift, or other chatbot',
          },
          {
            description: 'CRM Integration',
          },
          {
            description: 'Automations not included',
          },
        ],
        callToAction: {
          id: 'glass-package',
          text: 'Order now',
          icon: 'tabler:shopping-cart',
          href: 'https://buy.stripe.com/bIY4jrbXAanY1uU9AG',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'AI Bundle',
        subtitle: 'The pinnacle of innovation',
        price: ["Custom"],
        period: 'Custom Pricing | Per Project',
        items: [
          {
            description: 'Custom AI solutions',
          },
          {
            description: 'Complex workflows with n8n',
          },
          {
            description: 'Ask questions of your data',
          },
          {
            description: 'Concierge Support',
          },
        ],
        callToAction: {
          id: 'diamond-package',
          text: 'Book a call',
          icon: 'tabler:calendar',
          href: '/schedule-a-demo',
        },
      },
    ]}
  />
