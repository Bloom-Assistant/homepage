---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Join the Pilot Program"
    title="Power your cross-channel collaboration with Oasis"
    subtitle="Become an early adopter and gain access to exclusive benefits."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    prices={[
      {
        title: 'Explorer Package',
        subtitle: 'Your first step into the Oasis',
        price: ["Free"],
        period: 'Up to 10 partners',
        items: [
          {
            description: 'Embedded Account Mapping',
          },
          {
            description: 'Branded real-time partner chat',
          },
          {
            description: 'Org and User Profiles',
          },
          {
            description: 'WebAuthn login',
          },
        ],
        callToAction: {
          text: 'Join the Beta',
          href: 'https://forms.fillout.com/t/bHn1ZhE6oLus',
        },
      },
      {
        title: 'Adventurer Package',
        subtitle: 'Your adventure into collaboration',
        price: ["$9.50"],
        period: 'Per Partner + $10.50/ingested lead',
        items: [
          {
            description: 'Everything in Explorers Package',
          },
          {
            description: 'Account Mapping',
          },
          {
            description: 'Ephemeral Co-selling Chat',
          },
          {
            description: 'Co-selling Analytics',
          },
        ],
        callToAction: {
          text: 'Join the beta',
          href: 'https://forms.fillout.com/t/bHn1ZhE6oLus',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Enterprise Pilot',
        subtitle: 'Your epic story of mutual growth',
        price: ["$160k"],
        period: 'Unlimited Usage',
        items: [
          {
            description: 'Fully unlocked platform',
          },
          {
            description: 'Unlimited partners',
          },
          {
            description: 'SSO Integration',
          },
          {
            description: 'SOC2 Compliance (Coming Soon)',
          },
        ],
        callToAction: {
          text: 'Chat with us',
          href: 'https://calendly.com/jbohrman/30min',
        },
      },
    ]}
  />

  <!-- Features3 Widget **************

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Tiered Pricing Plans',
        description: 'Choose from a range of pricing plans designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
