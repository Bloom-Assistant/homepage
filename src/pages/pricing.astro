        callToAction: {
          id: 'sand-package',
          text: 'Order now',
          icon: 'tabler:shopping-cart',
          href: 'https://getoasis.spp.io/order/plans',
        },
      },
      {
        title: 'Glass Package',
        subtitle: 'The clear choice for automation',
        price: ["$2500"],
        period: 'Per Month | Billed Quarterly',
        items: [
          {
            description: '30 Processes per month',
          },
          {
            description: 'AI and ML workflows',
          },
          {
            description: 'Requests managed via Lark',
          },
          {
            description: 'Concierge Support',
          },
        ],
        callToAction: {
          id: 'glass-package',
          text: 'Order now',
          icon: 'tabler:shopping-cart',
          href: 'https://getoasis.spp.io/order/plans',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Diamond Package',
        subtitle: 'The pinnacle of automation',
        price: ["$3100"],
        period: 'Per Month | Billed Quarterly',
        items: [
          {
            description: 'Unlimited processes per month',
          },
          {
            description: 'Data warehousing and analytics',
          },
          {
            description: 'Custom data-driven workflows',
          },
          {
            description: 'Concierge Support',
          },
        ],
        callToAction: {
          id: 'diamond-package',
          text: 'Order Now',
          icon: 'tabler:shopping-cart',
          href: 'https://getoasis.spp.io/order/plans',
        },
      },
    ]}
