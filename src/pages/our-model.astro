---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Community Led Open Source Collective',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Schedule a call',
          href: '/schedule-a-demo',
        },
      ]}
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Hybrid economic model"
    actions={[
      { variant: 'primary', id:'our-model-hero', target: '_black', text: 'Scedule a call', href: '#projects' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/3889891/pexels-photo-3889891.jpeg?auto=compress&cs=tinysrgb&w=1200',
      alt: 'Oasis Hero Image',
    }}
  >
    <Fragment slot="title">
      We work within the constraints of our system for change
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        We are using the systems designed institutions to create a flywheel of social advocacy
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why are model is effective"
    subtitle="We use products and services to create self-sustaining social change"
    columns={2}
    items={[
      {
        title: 'Community Driven',
        description:
          'Our community is the heart of our organization. All of our collaboration and decision making is done through a public Slack workspace.',
        icon: 'tabler:brand-slack',
      },
      {
        title: 'Shared Ownership',
        description: `We believe that everyone should have a say in the direction of the organization. That's why we use a ESOP model to distribute ownership to all members.`,
        icon: 'tabler:layers-intersect',
      },
      {
        title: 'Social Advocacy',
        description:
          'We always put our social mission first. We are committed to using our collective resources to make the world a better place.',
        icon: 'tabler:seeding',
      },
      {
        title: 'Transparent Records',
        description: `We believe that transparency is the key to a healthy organization. That's why we publish all of our financial records and meeting notes.`,
        icon: 'tabler:zoom-money',
      },
    ]}
  />

