---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'SaaS Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Schedule a consultation',
          href: 'https://calendly.com/jbohrman/30min',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Reveal X Uppercut"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Schedule a chat', href: 'https://calendly.com/jbohrman/30min' },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="image">
      <div class="relative h-0 pb-[56.25%]">
        <div class="klaviyo-form-QXmL4j"></div>
      </div>
    </Fragment>
    <Fragment slot="title">
      Are you missing out on <span class="text-primary dark:text-white highlight"
        >nearbound</span
      > partnership revenue?<br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
      You may be able to dig up some diamonds in the rough by letting us map your accounts with <a href="https://www.reveal.co">Reveal</a>, the #1 nearbound account mapping tool. 
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why map accounts?"
    subtitle="Mapping accounts is the first step to building a successful partner program. It allows you to collaborate with your partners to identify hidden revenue opportunities."
    columns={2}
    items={[
      {
        title: 'Identify diamonds in the rough',
        description:
          'Identify hidden revenue opportunities in yourr ecosystem. You may be surprised by how many of your customers are already working with partners.',
        icon: 'tabler:diamond',
      },
      {
        title: 'Plan ABM campaigns',
        description: `Account mapping can help you plan your ABM campaigns by identifying which accounts to target based on your partners' relationships.`,
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Co-sell with partners',
        description:
          'Mapping accounts allows you to collaboratively sell with your partners by identifying the established relationships between your partners and your customers.',
        icon: 'tabler:message-2',
      },
      {
        title: 'Track attribution',
        description: `Account mapping can help you track attribution by identifying which accounts have ongoing relationships with which partners.`,
        icon: 'tabler:coin',
      },
    ]}
  />

