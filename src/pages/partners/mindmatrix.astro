---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'SaaS Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Schedule a consultation',
          href: 'https://calendly.com/jbohrman/30min',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Mindmatrix X Uppercut"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Schedule a chat', href: 'https://calendly.com/jbohrman/30min' },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="image">
      <div class="relative h-0 pb-[56.25%]">
        <div class="klaviyo-form-R2ZEXx"></div>
      </div>
    </Fragment>
    <Fragment slot="title">
      Is your partner program getting <span class="text-primary dark:text-white highlight"
        >too big</span
      > for it's britches ðŸ‘–?<br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
      It might be time to call in the big guns. Come learn how our partnership with Mindmatrix can help you build and manage your partner program.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Do you need a PRM?"
    subtitle="If you've reached over 15 partners and are struggling to manage them all, it might be time to look into a PRM."
    columns={2}
    items={[
      {
        title: 'Centralize collaboration',
        description:
          'A PRM can help you centralize your partner program, making it easier to manage and collaborate with your partners.',
        icon: 'tabler:checks',
      },
      {
        title: 'Manage assets',
        description: `Using a PRM can help you manage things like co-brandable assets, making it easier to share them with your partners. `,
        icon: 'tabler:briefcase',
      },
      {
        title: 'Communicate effectively',
        description:
          'Having a PRM can help you communicate with your partners more effectively, ensuring that they are always up to date.',
        icon: 'tabler:message-2',
      },
      {
        title: 'Track attribution',
        description: `A PRM can help you track attribution, making it easier to see which partners are driving the most revenue.`,
        icon: 'tabler:coin',
      },
    ]}
  />

