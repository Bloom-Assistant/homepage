<script>
	const dropdownToggles = document.querySelectorAll('.list-item');
	const dropdowns = document.querySelectorAll('ul.absolute');
  
	dropdownToggles.forEach((toggle) => {
	  toggle.addEventListener('mouseenter', () => { // Use mouseenter to open on hover
		const dropdown = toggle.nextElementSibling;
		dropdown.classList.add('active');
	  });
  
	  toggle.addEventListener('mouseleave', () => { // Hide on mouseleave
		const dropdown = toggle.nextElementSibling;
		dropdown.classList.remove('active');
	  });
	});
  
	dropdowns.forEach((dropdown) => {
	  dropdown.addEventListener('mouseenter', () => {
		dropdown.classList.add('active');
	  });
  
	  dropdown.addEventListener('mouseleave', () => {
		dropdown.classList.remove('active');
	  });
	});
  
	// Close dropdowns when clicking outside
	document.addEventListener('click', (e) => {
	  const targetElement = e.target as HTMLElement; // Typecast e.target to HTMLElement
	  if (!targetElement.closest('.list-item')) {
		dropdownToggles.forEach((toggle) => {
		  toggle.nextElementSibling.classList.remove('active');
		});
	  }
	});
  </script>

